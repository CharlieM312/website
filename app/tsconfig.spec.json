{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./out-tsc/spec",
        "types": ["jasmine", "node", "jest"],
        "module": "commonjs",
        "target": "es2018",
        "moduleResolution": "node16",
        "sourceMap": true,
        "paths": {
            "@angular/core/testing": ["node_modules/@angular/core/types/testing.d.ts"],
            "@angular/*/testing": ["node_modules/@angular/*/types/testing.d.ts"]
        }
    },
    "include": ["src/**/*.spec.ts", "src/**/*.d.ts"]
}